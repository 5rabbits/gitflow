require_git_repo
require_hubflow_initialized
hubflow_load_settings

usage() {
	echo "usage: git hf update"
}

cmd_default() {
	cmd_update "$@"
}

cmd_help() {
	usage
	exit 0
}

cmd_update() {
	# make sure we're okay to start
	require_clean_working_tree

	# fetch and merge the latest changes from origin
	hubflow_merge_latest_changes_from_origin

	# drop any branches that have disappeared from origin
	git fetch -q --prune || die "Unable to prune branches that no longer exist at '$ORIGIN'"

	# all done
	echo
	echo "Summary of actions:"
	echo "- Changes from $ORIGIN/$MASTER_BRANCH have been pulled into branch '$MASTER_BRANCH'"
	echo "- Changes from $ORIGIN/$DEVELOP_BRANCH have been pulled into branch '$DEVELOP_BRANCH'"
	echo "- Any resolved merge conflicts have been pushed back to $ORIGIN"
	echo "- You are now on branch '$BRANCH'"
}